{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@nixpend/multi-tenant": ["libs/multi-tenant/src"],
      "multi-tenant/multi-tenant": ["libs/multi-tenant/src"],
      "multi-tenant/multi-tenant/*": ["libs/multi-tenant/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
